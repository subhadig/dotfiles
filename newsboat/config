auto-reload yes

# Vi like key bindings
bind-key k up
bind-key j down

# A browser setting that works on both Debian and MacOS
browser "which links2 1>/dev/null && links2 -g %u || links -g %u"

# Play videos in VLC with ,v
macro v set browser "vlc %u 1>/dev/null 2>1"; open-in-browser ; set browser "which links2 1>/dev/null && links2 -g %u || links -g %u"
