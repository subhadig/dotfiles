auto-reload yes
reload-threads 3
download-timeout 120
feed-sort-order lastupdated

# Vi like key bindings
bind-key k up
bind-key j down
bind-key ^F pagedown
bind-key ^B pageup

# Podboat configurations
player "vlc 1>/dev/null 2>&1"
download-path ".newsboat/podcasts/%n"

# A browser setting that works on both Debian and MacOS
browser "which firefox-latest 1>/dev/null && firefox-latest --private-window %u || /Applications/Firefox.app/Contents/MacOS/firefox --private-window %u"

# Open links in lynx
macro l set browser "lynx -cfg=${DOTRCDIR}/lynx/lynx.cfg %u"; open-in-browser ; set browser "which firefox-latest 1>/dev/null && firefox-latest --private-window %u || /Applications/Firefox.app/Contents/MacOS/firefox --private-window %u"

# Play videos in VLC with ,v
macro v set browser "play %u"; open-in-browser ; set browser "which firefox-latest 1>/dev/null && firefox-latest --private-window %u || /Applications/Firefox.app/Contents/MacOS/firefox --private-window %u"

# Play videos in browser with ,V
macro V set browser "which firefox-latest 1>/dev/null && firefox-latest --new-window %u 1>/dev/null 2>&1 || /Applications/Firefox.app/Contents/MacOS/firefox %u 1>/dev/null 2>&1 &"; open-in-browser ; set browser "which firefox-latest 1>/dev/null && firefox-latest --private-window %u || /Applications/Firefox.app/Contents/MacOS/firefox --private-window %u"

# Play podcasts in VLC with ,p directly from newsboat
macro p set browser "play-queued-podcast %u"; enqueue ; open-in-browser ; set browser "which firefox-latest 1>/dev/null && firefox-latest --private-window %u || /Applications/Firefox.app/Contents/MacOS/firefox --private-window %u"
