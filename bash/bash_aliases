# gpg
encrypt-file() {
    local infile="$1"
    gpg -c "$infile"
    read -p "Delete original file? " choice
    if [ "$choice" = 'y' ]; then
        rm "$infile"
        echo Deleted $infile.
    fi
}

decrypt-file() {
    local infile="$1"
    local outfile=`sed 's/.gpg$//' <<<"$infile"`
    gpg -o "$outfile" -d "$infile"
}

