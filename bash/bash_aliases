# Open
which xdg-open 1>/dev/null && alias open='xdg-open 2>/dev/null'

# Search and open
so() {
    local file
    file=`fzf`
    if [ $? -ne 0 ]; then
        return
    fi
    echo "Opening ${file}"
    history -s open "${file}"
    open "${file}"
}

# Search and edit
se() {
    local file
    file=`fzf --preview='head -$FZF_PREVIEW_LINES {}'`
    if [ $? -ne 0 ]; then
        return
    fi
    echo "Editing ${file}"
    history -s vi "${file}"
    vi "${file}"
}

# Reload bashrc/bash_profile
rb() {
    case "$(uname -s)" in
        Linux*)     . ~/.bashrc;;
        Darwin*)    . ~/.bash_profile;;
        *)          echo "ERROR: Unknown OS";;
    esac
}

